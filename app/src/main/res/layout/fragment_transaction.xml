<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.example.johan.economyapp.TransactionFragment"
                                             tools:layout_editor_absoluteX="0dp"
                                             tools:layout_editor_absoluteY="25dp">


    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/etTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:backgroundTint="@android:color/background_light"
        android:ems="10"
        android:hint="@string/title"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/etSum"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"/>

    <EditText
        android:id="@+id/etSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="81dp"
        android:backgroundTint="@android:color/background_light"
        android:ems="10"
        android:hint="@string/sum"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/etDate"
        app:layout_constraintLeft_toLeftOf="@+id/etTitle"
        app:layout_constraintRight_toRightOf="@+id/etTitle"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="216dp"
        android:layout_height="42dp"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="55dp"
        android:backgroundTint="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/etDate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etSum"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <EditText
        android:id="@+id/etDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/btnAddB"
        app:layout_constraintLeft_toLeftOf="@+id/etSum"
        app:layout_constraintRight_toRightOf="@+id/etSum"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:focusableInTouchMode="false"/>

    <Button
        android:id="@+id/btnAddB"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:layout_marginBottom="48dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"/>

    <Switch
        android:id="@+id/switch2"
        android:layout_width="208dp"
        android:layout_height="29dp"
        android:layout_marginBottom="30dp"
        android:text="@string/expense"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/etTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"/>


</android.support.constraint.ConstraintLayout>
